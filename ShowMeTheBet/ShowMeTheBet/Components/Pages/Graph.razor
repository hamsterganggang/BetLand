@code {
    private decimal balance = 0;
    private decimal currentMultiplier = 1.0m;
    private decimal betAmount = 0;
    private bool isGameRunning = false;
    private bool isLoading = false;
    private List<GameBet>? bets;
    private System.Threading.Timer? timer;
    private const decimal MinMultiplier = 1.0m;
    private const decimal MaxMultiplier = 5.0m;
    private const decimal MultiplierStep = 0.1m;
    private bool isIncreasing = true;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated)
        {
            await LoadData();
        }
    }

    private async Task LoadData()
    {
        balance = await GameService.GetBalanceAsync();
        bets = await GameService.GetGraphBetsAsync();
    }

    private void StartGame()
    {
        if (betAmount <= 0) return;

        isGameRunning = true;
        currentMultiplier = MinMultiplier;
        isIncreasing = true;

        timer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                if (isGameRunning)
                {
                    if (isIncreasing)
                    {
                        currentMultiplier += MultiplierStep;
                        if (currentMultiplier >= MaxMultiplier)
                        {
                            isIncreasing = false;
                        }
                    }
                    else
                    {
                        currentMultiplier -= MultiplierStep;
                        if (currentMultiplier <= MinMultiplier)
                        {
                            isIncreasing = true;
                        }
                    }
                    StateHasChanged();
                }
            });
        }, null, TimeSpan.Zero, TimeSpan.FromMilliseconds(50));
    }

    private async Task StopGame()
    {
        if (!isGameRunning || betAmount <= 0) return;

        isGameRunning = false;
        isLoading = true;

        if (timer != null)
        {
            await timer.DisposeAsync();
            timer = null;
        }

        try
        {
            var success = await GameService.PlaceGraphBetAsync(betAmount, currentMultiplier);
            if (success)
            {
                betAmount = 0;
                currentMultiplier = MinMultiplier;
                await LoadData();
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    public async ValueTask DisposeAsync()
    {
        if (timer != null)
        {
            await timer.DisposeAsync();
        }
    }
}

