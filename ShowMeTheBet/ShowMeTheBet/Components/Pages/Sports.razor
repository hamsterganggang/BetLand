@page "/sports"
@inject ShowMeTheBet.ViewModels.Game.SportsViewModel ViewModel
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>스포츠 토토 - ShowMeTheBet</PageTitle>

@* 로딩 중일 때 표시되는 화면 *@
@if (ViewModel.IsLoading)
{
    <div style="text-align: center; padding: 50px;">
        <p>로딩 중...</p>
    </div>
}
@* 인증되지 않은 경우 로그인 요청 화면 *@
else if (!ViewModel.IsAuthenticated)
{
    <div class="auth-required">
        <div class="auth-message">
            <h2>로그인이 필요합니다</h2>
            <p>베팅을 하려면 먼저 로그인해주세요.</p>
            <button class="btn btn-primary" @onclick="NavigateToLogin">로그인하기</button>
        </div>
    </div>
}
@* 인증된 경우 스포츠 토토 화면 *@
else
{
    <div class="betting-container">
        <div class="betting-header">
            <h1>⚽ 스포츠 토토</h1>
            <div class="balance-display">
                <span class="balance-label">잔액:</span>
                <span class="balance-amount">@ViewModel.Balance.ToString("N0") 원</span>
            </div>
        </div>

        <div class="betting-content">
            @* 경기 목록 섹션 *@
            <div class="matches-section">
                <h2>경기 목록</h2>
                <div class="matches-list">
                    @if (ViewModel.Matches != null)
                    {
                        @foreach (var match in ViewModel.Matches)
                        {
                            <div class="match-card">
                                <div class="match-header">
                                    <span class="league-badge">@match.League</span>
                                    <span class="match-time">@match.MatchTime.ToString("MM/dd HH:mm")</span>
                                </div>
                                <div class="match-teams">
                                    @* 홈팀 베팅 버튼 *@
                                    <div class="team-section">
                                        <div class="team-name">@match.HomeTeam</div>
                                        <button class="odds-btn @(ViewModel.SelectedBets.Any(b => b.MatchId == match.Id && b.Type == BetType.Home) ? "selected" : "")"
                                                @onclick="() => ViewModel.SelectBet(match.Id, BetType.Home, match.HomeOdds, match.HomeTeam, match.AwayTeam)">
                                            <span class="odds-value">@match.HomeOdds.ToString("F2")</span>
                                        </button>
                                    </div>
                                    @* 무승부 베팅 버튼 *@
                                    <div class="team-section">
                                        <div class="team-name draw">무승부</div>
                                        <button class="odds-btn @(ViewModel.SelectedBets.Any(b => b.MatchId == match.Id && b.Type == BetType.Draw) ? "selected" : "")"
                                                @onclick="() => ViewModel.SelectBet(match.Id, BetType.Draw, match.DrawOdds, match.HomeTeam, match.AwayTeam)">
                                            <span class="odds-value">@match.DrawOdds.ToString("F2")</span>
                                        </button>
                                    </div>
                                    @* 원정팀 베팅 버튼 *@
                                    <div class="team-section">
                                        <div class="team-name">@match.AwayTeam</div>
                                        <button class="odds-btn @(ViewModel.SelectedBets.Any(b => b.MatchId == match.Id && b.Type == BetType.Away) ? "selected" : "")"
                                                @onclick="() => ViewModel.SelectBet(match.Id, BetType.Away, match.AwayOdds, match.HomeTeam, match.AwayTeam)">
                                            <span class="odds-value">@match.AwayOdds.ToString("F2")</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            @* 베팅 슬립 섹션 *@
            <div class="betslip-section">
                <BetSlip Bets="@ViewModel.SelectedBets" OnRemove="ViewModel.RemoveBet" OnPlaceBets="ViewModel.PlaceBetsAsync" />
            </div>
        </div>
    </div>
}

@code {
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    protected override async Task OnInitializedAsync()
    {
        ViewModel.StateChanged += OnViewModelStateChanged;
        await ViewModel.InitializeAsync();
    }

    private void OnViewModelStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ViewModel.StateChanged -= OnViewModelStateChanged;
        ViewModel.Dispose();
    }
}
